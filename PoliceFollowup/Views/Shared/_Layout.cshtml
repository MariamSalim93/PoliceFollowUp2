        body {
            margin: 0px;
            margin: 0;
            padding: 0;
        }


        .btn-Create {
            background-color: #81715e;
            color: white;
        }

            .btn-Create:hover {
                background-color: #c0b7aa;
                color: #403b36;
            }
    </style>
</head>
<body style=" background-color: #f5f4f3;">
    <section class="navigation ">
        <div class="nav-container">
            <div class="brand p-1">

                <img src="~/Content/images/ShjpLogo (3).png" width="45" />
                <span style="padding-right: 10px; color: #7b7268;font-size:20px;">
                    نظام المتابعة الشرطية
                </span>
            </div>
            <nav class="navList no-print">
                <div class="nav-mobile"><a id="nav-toggle" href="#!"><span></span></a></div>
                <ul class="nav-list">
                    <li>
                        <a href='@Url.Action("Index", "Home", new { area = "" })'>الرئيسية</a>
                    </li>

                    <li>
                        <a href="#!">إدارة النظام </a>
                        <ul class="nav-dropdown">
                            <li>
                                <a href='@Url.Action("Master", "Master")'>إدارة الرموز</a>
                            </li>
                            <li>
                                <a href='@Url.Action("MainPage", "Home")'>الصلاحيات</a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#!"><i class='bx bx-user' style="margin:0px 5px;"></i>المستخدم</a>
                        <ul class="nav-dropdown">
                            <li>
                                <a href="#!">الإعدادات</a>
