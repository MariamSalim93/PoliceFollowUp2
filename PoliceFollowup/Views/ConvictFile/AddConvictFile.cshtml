@model SharedLayer.Models.ConvictFileDTO

@{
    ViewBag.Title = "اضافة ملف محكوم";
}
<head>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/JsScript/formFieldValidation.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/CSSFiles/HomeStyle.css" rel="stylesheet" />

    <style>
        * {
            text-align: right;
        }

        .Subtitle {
            background-color: #81715e0e;
            color: #7b7268;
            padding: 12px 15px;
            font-weight: 700;
            font-size: 14px;
            margin-bottom: 15px;
            margin-top: 20px;
        }

        .control-label {
            font-weight: 600;
            color: #666;
            font-size: 13px;
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            font-size: 13px;
            padding: 6px 10px;
            height: 34px;
        }

        textarea.form-control {
            height: auto;
            min-height: 80px;
        }

        /* Critical: Remove extra spacing */
        .form-group {
            margin-bottom: 15px !important;
        }

        .row {
            margin-bottom: 0 !important;
        }

        .col-md-4, .col-4 {
            margin-bottom: 15px;
        }

        /* Remove Bootstrap's default form spacing */
        .form-horizontal .form-group {
            margin-left: 0;
            margin-right: 0;
        }
    </style>
</head>

<div class="container-fluid mt-3">
    @using (Html.BeginForm("AddConvictFile", "ConvictFile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="p-3 bg-white shadow-sm" style="font-size:small">
            <div class="d-flex align-items-center" style="gap: 10px;">
                <img src="~/Content/images/arrest.png" width="34" style="margin-top: -4px;" />
                <h3 class="mb-0" style="color: #7b7268;">اضافة ملف محكوم</h3>
            </div>
            <br />

            <div class="Subtitle">بيانات المحكوم</div>

            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">الاسم</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                </div>
                <div class="col-md-4">
                    <label class="control-label">الاسم الوهمي</label>
                    @Html.TextBoxFor(model => model.FakeName, new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <label class="control-label">الجنس</label>
                    @Html.DropDownListFor(m => m.Gender, new SelectList(new[] {
                        new { Value = "", Text = "يرجى الاختيار" },
                        new { Value = "ذكر", Text = "ذكر" },
                        new { Value = "أنثى", Text = "أنثى" }
                    }, "Value", "Text"), new { @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">الجنسية</label>
                    @Html.DropDownListFor(model => model.Nationality, new SelectList(ViewBag.Nationality, "NationalityName", "NationalityName"), "يرجى الاختيار", new { @Id = "Nationality", @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })

                </div>
                <div class="col-md-4">
                    <label class="control-label">تاريخ الميلاد</label>
                    @Html.TextBoxFor(model => model.BirthDate, "{0:yyyy-MM-dd}", new { @class = "form-control is-invalid", @Required = "@Required", type = "date", @id = "BirthDate" })
                    @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })

                </div>
                <div class="col-md-4">
                    <label class="control-label">العمر</label>
                    @Html.TextBoxFor(model => model.Age, new { @class = "form-control", @readonly = "readonly", @id = "Age", style = "background-color: #f8f8f8;" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">المستوى التعليمي</label>
                    @Html.DropDownListFor(model => model.EducationalLevel,
                        new SelectList(new[] {
                            new { Value = "", Text = "يرجى الاختيار" },
                            new { Value = "غير متعلم", Text = "غير متعلم" },
                            new { Value = "ابتدائي", Text = "ابتدائي" },
                            new { Value = "إعدادي", Text = "إعدادي" },
                            new { Value = "ثانوي", Text = "ثانوي" },
                            new { Value = "دبلوم", Text = "دبلوم" },
                            new { Value = "بكالوريوس", Text = "بكالوريوس" },
                            new { Value = "ماجستير", Text = "ماجستير" },
                            new { Value = "دكتوراه", Text = "دكتوراه" }
                        }, "Value", "Text"),
                        new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <label class="control-label">الاعاقة</label>
                    @Html.DropDownListFor(model => model.Disability,
                        new SelectList(new[] {
                            new { Value = "", Text = "يرجى الاختيار" },
                            new { Value = "نعم", Text = "نعم" },
                            new { Value = "لا", Text = "لا" }
                        }, "Value", "Text"),
                        new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <label class="control-label">الحالة الاجتماعية</label>
                    @Html.DropDownListFor(model => model.MaritalStatus,
                        new SelectList(new[] {
                            new { Value = "", Text = "يرجى الاختيار" },
                            new { Value = "أعزب", Text = "أعزب" },
                            new { Value = "متزوج", Text = "متزوج" },
                            new { Value = "مطلق", Text = "مطلق" },
                            new { Value = "أرمل", Text = "أرمل" }
                        }, "Value", "Text"),
                        new { @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.MaritalStatus, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">المهنة</label>
                    @Html.DropDownListFor(model => model.Profession,
                        new SelectList(new[] {
                            new { Value = "", Text = "يرجى الاختيار" },
                            new { Value = "موظف", Text = "موظف" },
                            new { Value = "عاطل عن العمل", Text = "عاطل عن العمل" },
                            new { Value = "طالب", Text = "طالب" },
                            new { Value = "متقاعد", Text = "متقاعد" },
                            new { Value = "ربة منزل", Text = "ربة منزل" },
                            new { Value = "عمل حر", Text = "عمل حر" }
                        }, "Value", "Text"),
                        new { @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.Profession, "", new { @class = "text-danger" })

                </div>
                <div class="col-md-4">
                    <label class="control-label">مقر السكن</label>
                    @Html.DropDownListFor(model => model.Residence, new SelectList(ViewBag.ResidenceMaster, "ResidenceName", "ResidenceName"), "يرجى الاختيار", new { @Id = "Residence", @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.Residence, "", new { @class = "text-danger" })

                </div>
                <div class="col-md-4">
                    <label class="control-label">الرقم الموحد</label>
                    @Html.TextBoxFor(model => model.UnifiedNo, new { @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.UnifiedNo, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">رقم الهوية</label>
                    @Html.TextBoxFor(model => model.EmiratesID, new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <label class="control-label">رقم الهاتف</label>
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                </div>
                <div class="col-md-4">
                    <label class="control-label">المرفقات</label>
                    <input type="file" name="Attachments" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Attachments, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
               
                <div class="col-md-12">
                    <label class="control-label">الملاحظات</label>
                    @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", rows = 3 })
                </div>
            </div>
            <!-- Hidden fields -->
            <div style="display:none">
                @Html.EditorFor(model => model.CreatedDate)
                @Html.EditorFor(model => model.CreatedBy)
                @Html.EditorFor(model => model.EditedBy)
                @Html.EditorFor(model => model.EditDate)
                @Html.EditorFor(model => model.EditNote)
                @Html.EditorFor(model => model.Status)
            </div>
        </div>

        <div class="mt-3" style="text-align: left !important;">
            <input type="submit" class="btn btn-sm btn-Add p-2" value="حفظ" />
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        // Function to calculate age
        function calculateAge() {
            var birthDateVal = $('#BirthDate').val();

            if (birthDateVal) {
                var today = new Date();
                var birthDate = new Date(birthDateVal);

                if (!isNaN(birthDate.getTime())) {
                    var age = today.getFullYear() - birthDate.getFullYear();
                    var monthDiff = today.getMonth() - birthDate.getMonth();

                    if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
                        age--;
                    }

                    if (age >= 0 && age <= 150) {
                        $('#Age').val(age);
                    } else {
                        $('#Age').val('');
                    }
                } else {
                    $('#Age').val('');
                }
            } else {
                $('#Age').val('');
            }
        }

        // Calculate age on page load
        calculateAge();

        // Calculate age when birth date changes
        $('#BirthDate').on('change input', function () {
            calculateAge();
        });
    });
</script>