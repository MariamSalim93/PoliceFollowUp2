
@model SharedLayer.Models.ElectronicMonitoringDTO

@{
    ViewBag.Title = "تنفيذ المراقبة الالكترونية";
}
<head>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/JsScript/formFieldValidation.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/CSSFiles/HomeStyle.css" rel="stylesheet" />

    <style>

        .btn.btn-Add {
            background-color: #7b7268 !important;
            color: white;
            text-align: center;
            padding: 5px 15px;
            font-weight: 600;
        }

        .btn-Add:hover {
            background-color: #e8e3dd;
            color: #7b7268;
        }

        * {
            text-align: right;
            direction: rtl
        }

        .Subtitle {
            background-color: #81715e0e;
            color: #81715e;
            padding: 15px;
            font-weight: 700;
            font-size: 15px;
        }

        .control-label {
            font-weight: 600;
        }

        .form-control {
            font-size: small;
        }

        select {
            -webkit-appearance: menulist;
            -moz-appearance: menulist;
            appearance: menulist;
        }

            select.custom-select {
                -webkit-appearance: none;
                -moz-appearance: none;
                appearance: none;
                background-image: url('arrow-down-icon.png');
                background-repeat: no-repeat;
                background-position: right center;
                padding-right: 300px;
            }

        .nav-link {
            color: #81715e;
        }

        .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
            background-color: #81715e0b;
            color: #81715e;
            font-weight: 600;
            border-top: 3px solid #81715e;
            border-radius: 0px;
        }
    </style>
</head>
<div class="container-fluid mt-3">
    @using (Ajax.BeginForm("AddElectronicMonitoring", "ConvictFile",
new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace }
))
    {
       
            @Html.AntiForgeryToken()

    <div class="p-3 bg-white shadow-sm" style="font-size:small">
        <h3 class="m-0 mb-3" style="color: #7b7268">تنفيذ المراقبة الالكترونية</h3>
        

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">رقم القضية</label>
                    @Html.TextBoxFor(model => model.CaseNo, new { @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.CaseNo, "", new { @class = "text-danger" })

                </div>
            </div><div class="col-md-4">
                      <div class="form-group">
                          <label class="control-label">نوع الحكم</label>
                          @Html.DropDownListFor(model => model.JudgmentType, new SelectList(ViewBag.JudgmentTypeMaster, "JudgmentTypeName", "JudgmentTypeName"), "يرجى الاختيار", new { @Id = "JudgmentType", @class = "form-control is-invalid", @Required = "@Required" })
                          @Html.ValidationMessageFor(model => model.JudgmentType, "", new { @class = "text-danger" })

                      </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">تاريخ الحكم</label>
                    @Html.TextBoxFor(model => model.JudgmentDate, "{0:yyyy-MM-dd}", new { @class = "form-control is-invalid", @Required = "@Required", type = "date" })
                    @Html.ValidationMessageFor(model => model.JudgmentDate, "", new { @class = "text-danger" })

                </div>
            </div>
          
        </div>
        <div class="row">
            
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">نطاق المراقبة</label>
                    @Html.DropDownListFor(model => model.MonitoringArea, new SelectList(ViewBag.MonitoringAreaMaster, "MonitoringAreaName", "MonitoringAreaName"), "يرجى الاختيار", new { @Id = "MonitoringArea", @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.MonitoringArea, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">تاريخ بدء المراقبة</label>
                    @Html.TextBoxFor(model => model.StartMonitoringDate, "{0:yyyy-MM-dd}", new { @class = "form-control is-invalid", @Required = "@Required", type = "date" })
                    @Html.ValidationMessageFor(model => model.StartMonitoringDate, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">تاريخ انتهاء المراقبة</label>
                    @Html.TextBoxFor(model => model.EndMonitoringDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">التهمة</label>
                    @Html.DropDownListFor(model => model.Blame, new SelectList(ViewBag.BlameMaster, "BlameName", "BlameName"), "يرجى الاختيار", new { @Id = "Blame", @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.Blame, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">مصدر الحكم</label>
                    @Html.DropDownListFor(model => model.JudgmentSource, new SelectList(ViewBag.JudgmentSourceMaster, "JudgmentSourceName", "JudgmentSourceName"), "يرجى الاختيار", new { @Id = "JudgmentSource", @class = "form-control is-invalid", @Required = "@Required" })
                    @Html.ValidationMessageFor(model => model.JudgmentSource, "", new { @class = "text-danger" })

                </div>
            </div>

          
        </div>

        <div class="row mt-3" style="font-size:small; display:none">
            <input type="text" name="FileNo" value="@ViewBag.ElectronicMonitoring.FileNo" />

            <input type="text" name="Status" value="@ViewBag.ElectronicMonitoring.Status" class="form-control" />

            <input type="datetime-local" name="CreatedDate" value="@((ViewBag.ElectronicMonitoring.CreatedDate as DateTime?)?.ToString("yyyy-MM-ddTHH:mm"))" class="form-control bg-body-secondary" readonly />
            <input type="text" name="CreatedBy" value="@ViewBag.ElectronicMonitoring.CreatedBy" class="form-control bg-body-secondary" readonly />

            <input type="text" name="EditedBy" value="@ViewBag.ElectronicMonitoring.EditedBy" class="form-control" />
            <textarea name="EditNote" class="form-control" rows="3">@ViewBag.ElectronicMonitoring.EditNote</textarea>

            <input type="text" name="ApprovedBy" value="@ViewBag.ElectronicMonitoring.ApprovedBy" class="form-control" />
            <textarea name="ApproveNotes" class="form-control" rows="3">@ViewBag.ElectronicMonitoring.ApproveNotes</textarea>
            <input type="datetime-local" id="EditDate" value="" class="form-control" />
            <input type="datetime-local" id="ApproveDate" value="" class="form-control" />
        </div>
        <div class="row">
            <div class="mt-3" style="text-align: left !important;">
                <input type="submit" class="btn btn-sm btn-Add p-2" value="حفظ" />
            </div>
        </div>
    </div>



        }
    </div>

<script>
    $(document).ready(function () {
        // Function to calculate age
        function calculateAge1() {
            var birthDateVal = $('#BirthDate1').val();

            if (birthDateVal) {
                var today = new Date();
                var birthDate = new Date(birthDateVal);

                if (!isNaN(birthDate.getTime())) {
                    var age = today.getFullYear() - birthDate.getFullYear();
                    var monthDiff = today.getMonth() - birthDate.getMonth();

                    if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
                        age--;
                    }

                    if (age >= 0 && age <= 150) {
                        $('#Age1').val(age);
                    } else {
                        $('#Age1').val('');
                    }
                } else {
                    $('#Age1').val('');
                }
            } else {
                $('#Age1').val('');
            }
        }

        // Calculate age on page load
        calculateAge1();

        // Calculate age when birth date changes
        $('#BirthDate1').on('change input', function () {
            calculateAge1();
        });
    });
</script>



