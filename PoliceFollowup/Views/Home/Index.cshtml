@{
    ViewBag.Title = "القائمة الرئيسية";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Content/CSS/MainStyle.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/NetworkStyle.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Changa:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        * {
            font-family: 'Changa', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #f8f7f6 0%, #ebe8e4 100%);
            min-height: 100vh;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, #81715e 0%, #ab9e8f 100%);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 25px;
            box-shadow: 0 10px 30px rgba(129, 113, 94, 0.2);
            position: relative;
            overflow: hidden;
            text-align:center;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: -50px;
                right: -50px;
                width: 200px;
                height: 200px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
            }

            .hero-section h1 {
                color: white;
                font-size: 32px;
                font-weight: 700;
                margin-bottom: 10px;
                position: relative;
                z-index: 1;
            }

            .hero-section p {
                color: rgba(255, 255, 255, 0.9);
                font-size: 16px;
                position: relative;
                z-index: 1;
            }

/*        #c1b7ac
*/        /* Enhanced Section Headers */
        .InternalSystems {
            background: #dfdad0;
            border-radius: 15px;
            padding: 15px 25px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 15px;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
            position: relative;
            overflow: hidden;
            color: #81715e;
            font-size: 20px;
            font-weight: 700;
        }

            .InternalSystems::after {
                content: '';
                position: absolute;
                right: 0;
                top: 0;
                bottom: 0;
                width: 5px;
                background: linear-gradient(135deg, #81715e 0%, #ab9e8f 100%);
            }

            .InternalSystems img {
                width: 50px;
                height: 50px;
                background: linear-gradient(135deg, #81715e 0%, #ab9e8f 100%);
                padding: 12px;
                border-radius: 12px;
                margin: 0;
            }

        /* Enhanced Card Design */
        .CustomCard {
            background: white;
            border-radius: 15px;
            padding: 20px;
            position: relative;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
            border: 1px solid transparent;
            height: 100%;
            overflow: hidden;
        }

            .CustomCard::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, #81715e 0%, #ab9e8f 100%);
                transform: scaleX(0);
                transition: transform 0.3s ease;
                transform-origin: right;
            }

            .CustomCard:hover::before {
                transform: scaleX(1);
            }

            .CustomCard:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(129, 113, 94, 0.2);
                border: 1px solid #81715e;
                background-color: #fafafa;
            }

            .CustomCard img {
                width: 60px;
                height: 60px;
                background: linear-gradient(135deg, #f8f6f4 0%, #ebe8e4 100%);
                border-radius: 15px;
                padding: 12px;
                margin-bottom: 15px;
                transition: all 0.3s ease;
                float: none !important;
            }

            .CustomCard:hover img {
                background: linear-gradient(135deg, #ab9e8f 0%, #c1b7ac 100%);
                transform: scale(1.1);
            }

        .CustomText {
            font-size: 18px;
            font-weight: 700;
            color: #2c2c2c;
            margin-bottom: 10px;
            transition: color 0.3s ease;
        }

        .CustomCard:hover .CustomText {
            color: #81715e;
        }

        .card-text {
            font-size: 14px;
            color: #666;
            line-height: 1.6;
            margin-top: 10px;
        }

        .CustomCard:hover .card-text {
            color: #81715e;
        }

        a.text-decoration-none {
            text-decoration: none !important;
        }

            a.text-decoration-none:hover {
                text-decoration: none !important;
            }

        /* Grid adjustments */
        .row {
            margin-bottom: 15px;
        }

            .row.p-2 {
                padding-top: 0.5rem !important;
                padding-bottom: 0.5rem !important;
            }

            .row.pt-2.pb-2 {
                padding-top: 0.5rem !important;
                padding-bottom: 0.5rem !important;
            }

        /* Animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .CustomCard {
            animation: fadeInUp 0.5s ease-out;
            animation-fill-mode: both;
        }

        .col-md-4:nth-child(1) .CustomCard {
            animation-delay: 0.1s;
        }

        .col-md-4:nth-child(2) .CustomCard {
            animation-delay: 0.2s;
        }

        .col-md-4:nth-child(3) .CustomCard {
            animation-delay: 0.3s;
        }

        .col-md-6:nth-child(1) .CustomCard {
            animation-delay: 0.1s;
        }

        .col-md-6:nth-child(2) .CustomCard {
            animation-delay: 0.2s;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .hero-section {
                padding: 25px;
            }

                .hero-section h1 {
                    font-size: 24px;
                }

            .InternalSystems {
                font-size: 18px;
                padding: 15px 20px;
            }

           
        }
    </style>
</head>

