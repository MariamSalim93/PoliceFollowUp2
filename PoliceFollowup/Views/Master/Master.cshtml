@{
    ViewData["Title"] = "القائمة الرئيسية";
}
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">


    <style>
        * {
            text-align: right;
            direction: rtl;
        }

        body {
            background: linear-gradient(135deg, #f8f7f6 0%, #ebe8e4 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 30px;
            margin: 20px auto;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
        }

        .page-header {
            background: linear-gradient(135deg, #81715e 0%, #ab9e8f 100%);
            padding: 40px;
            border-radius: 15px;
            margin-bottom: 40px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(129, 113, 94, 0.3);
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -10%;
                width: 300px;
                height: 300px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
            }

            .page-header::after {
                content: '';
                position: absolute;
                bottom: -30%;
                left: -5%;
                width: 200px;
                height: 200px;
                background: rgba(255, 255, 255, 0.05);
                border-radius: 50%;
            }

        .page-title {
            color: #fff;
            font-size: 32px;
            font-weight: 700;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            gap: 15px;
            position: relative;
            z-index: 1;
        }

            .page-title i {
                font-size: 36px;
                opacity: 0.9;
            }

        .settings-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .setting-card {
            background: #fff;
            border-radius: 15px;
            padding: 25px;
            text-decoration: none;
            color: inherit;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid #e8e8e8;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            min-height: 160px;
        }

            .setting-card::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 100%;
                height: 4px;
                background: linear-gradient(90deg, #81715e, #ab9e8f);
                transform: scaleX(0);
                transform-origin: right;
                transition: transform 0.3s ease;
            }

            .setting-card:hover::before {
                transform: scaleX(1);
            }

            .setting-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 24px rgba(129, 113, 94, 0.15);
                border-color: #81715e;
            }

        .card-icon-wrapper {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #81715e1a 0%, #ab9e8f1a 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            transition: all 0.3s ease;
        }

        .setting-card:hover .card-icon-wrapper {
            background: linear-gradient(135deg, #81715e 0%, #ab9e8f 100%);
        }

        .card-icon {
            font-size: 28px;
            color: #81715e;
            transition: all 0.3s ease;
        }

        .setting-card:hover .card-icon {
            color: #fff;
            transform: scale(1.1);
        }

        .card-title {
            font-size: 16px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
            line-height: 1.4;
        }

        .card-description {
            font-size: 12px;
            color: #7f8c8d;
            line-height: 1.5;
            margin-top: auto;
        }

        .section-divider {
            text-align: center;
            margin: 40px 0;
            position: relative;
        }

            .section-divider::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 1px;
                background: linear-gradient(90deg, transparent, #81715e, transparent);
            }

            .section-divider span {
                background: #fff;
                padding: 0 20px;
                position: relative;
                color: #81715e;
                font-weight: 600;
                font-size: 14px;
            }

        /* Animated background shapes */
        .floating-shape {
            position: fixed;
            opacity: 0.03;
            pointer-events: none;
            z-index: -1;
        }

        .shape-1 {
            top: 10%;
            left: 10%;
            width: 100px;
            height: 100px;
            background: #81715e;
            border-radius: 50%;
            animation: float 15s infinite ease-in-out;
        }

        .shape-2 {
            top: 60%;
            right: 10%;
            width: 150px;
            height: 150px;
            background: #ab9e8f;
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
            animation: float 20s infinite ease-in-out reverse;
        }

        .shape-3 {
            bottom: 10%;
            left: 50%;
            width: 80px;
            height: 80px;
            background: #81715e;
            transform: rotate(45deg);
            animation: float 18s infinite ease-in-out;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }

            33% {
                transform: translateY(-30px) rotate(120deg);
            }

            66% {
                transform: translateY(20px) rotate(240deg);
            }
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .settings-grid {
                grid-template-columns: 1fr;
            }

            .page-title {
                font-size: 24px;
            }

            .page-header {
                padding: 25px;
            }
        }

        /* Loading animation */
        .setting-card {
            animation: fadeInUp 0.5s ease forwards;
            opacity: 0;
        }

        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .setting-card:nth-child(1) {
            animation-delay: 0.05s;
        }

        .setting-card:nth-child(2) {
            animation-delay: 0.1s;
        }

        .setting-card:nth-child(3) {
            animation-delay: 0.15s;
        }

        .setting-card:nth-child(4) {
            animation-delay: 0.2s;
        }

        .setting-card:nth-child(5) {
            animation-delay: 0.25s;
        }

        .setting-card:nth-child(6) {
            animation-delay: 0.3s;
        }

        .setting-card:nth-child(7) {
            animation-delay: 0.35s;
        }

        .setting-card:nth-child(8) {
            animation-delay: 0.4s;
        }

        .setting-card:nth-child(9) {
            animation-delay: 0.45s;
        }

        .setting-card:nth-child(10) {
            animation-delay: 0.5s;
        }

        .setting-card:nth-child(11) {
            animation-delay: 0.55s;
        }

        .setting-card:nth-child(12) {
            animation-delay: 0.6s;
        }

        .setting-card:nth-child(13) {
            animation-delay: 0.65s;
        }

        .setting-card:nth-child(14) {
            animation-delay: 0.7s;
        }
    </style>
</head>

<body>
