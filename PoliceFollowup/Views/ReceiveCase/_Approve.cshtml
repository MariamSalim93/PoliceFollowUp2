@model SharedLayer.Models.ReceiveCaseDTO

@{
    ViewBag.Title = "اعتماد استقبال حالة";
}
<head>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!-- Add jQuery Unobtrusive Ajax if using Ajax.BeginForm -->
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/JsScript/formFieldValidation.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/CSSFiles/HomeStyle.css" rel="stylesheet" />

    <style>
        .btn.btn-Add {
            background-color: #7b7268 !important;
            color: white;
            text-align: center;
            padding: 5px 15px;
            font-weight: 600;
        }

        .btn-Add:hover {
            background-color: #e8e3dd;
            color: #7b7268;
        }

        * {
            text-align: right;
            direction: rtl
        }

        .Subtitle {
            background-color: #81715e0e;
            color: #81715e;
            padding: 15px;
            font-weight: 700;
            font-size: 15px;
        }

        .control-label {
            font-weight: 600;
        }

        .form-control {
            font-size: small;
        }

        select {
            -webkit-appearance: menulist;
            -moz-appearance: menulist;
            appearance: menulist;
        }

            select.custom-select {
                -webkit-appearance: none;
                -moz-appearance: none;
                appearance: none;
                background-image: url('arrow-down-icon.png');
                background-repeat: no-repeat;
                background-position: right center;
                padding-right: 300px;
            }

        .nav-link {
            color: #81715e;
        }

        .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
            background-color: #81715e0b;
            color: #81715e;
            font-weight: 600;
            border-top: 3px solid #81715e;
            border-radius: 0px;
        }

        .readonly-field {
            background-color: #f5f5f5;
        }
    </style>
</head>
<div class="container-fluid mt-3">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @* Use standard Html.BeginForm instead of Ajax.BeginForm for better reliability *@
    @using (Html.BeginForm("Approve", "ReceiveCase", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.AntiForgeryToken()

        @* Hidden field for ReportID - VERY IMPORTANT *@
        @Html.HiddenFor(model => model.ReportID)
        @Html.HiddenFor(model => model.FileNo)

        <div class="p-3 bg-white shadow-sm" style="font-size:small">
            <div class="d-flex align-items-center mb-3">
                <img src="~/Content/images/approve.png" width="34" class="mr-2" />
                <h3 class="m-0" style="color:#7b7268">اعتماد استقبال حالة</h3>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">رقم التقرير</label>
                        @Html.TextBoxFor(model => model.ReportID, new { @class = "form-control readonly-field", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.ReportID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">رقم الملف</label>
                        @Html.TextBoxFor(model => model.FileNo, new { @class = "form-control readonly-field", @readonly = "readonly" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">المعتمد</label>
                        @Html.TextBoxFor(model => model.ApprovedBy, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.ApprovedBy, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">تاريخ الاعتماد</label>
                        @Html.TextBoxFor(model => model.ApproveDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.ApproveDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">الحالة</label>
                        @Html.DropDownListFor(model => model.Status,
                            new SelectList(new[] {
                                new { Value = "معتمد", Text = "معتمد" },
                                new { Value = "مرفوض", Text = "مرفوض" },
                                new { Value = "قيد المراجعة", Text = "قيد المراجعة" }
                            }, "Value", "Text", Model.Status),
                            new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">ملاحظات الاعتماد</label>
                        @Html.TextAreaFor(model => model.ApproveNotes, new { @class = "form-control", rows = 3 })
                        @Html.ValidationMessageFor(model => model.ApproveNotes, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="mt-3 d-flex justify-content-between">
                <div>
                    <input type="submit" class="btn btn-sm btn-Add p-2" value="اعتماد" />
                    <a href="@Url.Action("ReceiveCaseList", "ReceiveCase")" class="btn btn-sm btn-secondary p-2">إلغاء</a>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // Bootstrap form validation
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    var forms = document.getElementsByClassName('needs-validation');
                    var validation = Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();
        });
    </script>
}