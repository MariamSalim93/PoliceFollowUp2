                    @Html.TextBoxFor(model => model.CaseNo, new { @class = "form-control" })
                </div>
            </div>
        </div>


        <div class="Subtitle" style="margin-bottom: 20px;">بيانات الحكم</div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">نوع الحكم</label>
                    @Html.TextBoxFor(model => model.JudgmentType, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">تاريخ الحكم</label>
                    @Html.TextBoxFor(model => model.JudgmentDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">التهمة</label>
                    @Html.TextBoxFor(model => model.Blame, new { @class = "form-control" })

                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">نطاق المراقبة</label>
                    @Html.TextBoxFor(model => model.MonitoringArea, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">تاريخ بدء المراقبة</label>
                    @Html.TextBoxFor(model => model.StartMonitoringDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">تاريخ انتهاء المراقبة</label>
                    @Html.TextBoxFor(model => model.EndMonitoringDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>
        </div> <div class="row">

            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">التهمة</label>
                    @Html.TextBoxFor(model => model.Blame, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">مصدر الحكم</label>
                    @Html.TextBoxFor(model => model.JudgmentSource, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">المرفقات</label>
                    @Html.TextBoxFor(model => model.Attachments, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div style="display:none">
            @Html.EditorFor(model => model.CreatedDate)
            @Html.EditorFor(model => model.CreatedBy)
            @Html.EditorFor(model => model.EditedBy)
            @Html.EditorFor(model => model.EditDate)
            @Html.EditorFor(model => model.EditNote)
            @Html.EditorFor(model => model.Status)
            @Html.EditorFor(model => model.ApproveDate)
            @Html.EditorFor(model => model.ApprovedBy)
            @Html.EditorFor(model => model.ApproveNotes)
        </div>
        <div class="row">
            <div class="mt-3" style="text-align: left !important;">
                <input type="submit" class="btn btn-sm btn-Add p-2" value="حفظ" />
            </div>
        </div>
    </div>



    }
</div>

<script>
    $(document).ready(function () {
        // Function to calculate age
        function calculateAge() {
            var birthDateVal = $('#BirthDate').val();

            if (birthDateVal) {
                var today = new Date();
                var birthDate = new Date(birthDateVal);

                if (!isNaN(birthDate.getTime())) {
                    var age = today.getFullYear() - birthDate.getFullYear();
                    var monthDiff = today.getMonth() - birthDate.getMonth();

                    if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
                        age--;
                    }

                    if (age >= 0 && age <= 150) {
                        $('#Age').val(age);
                    } else {
                        $('#Age').val('');
                    }
                } else {
                    $('#Age').val('');
                }
            } else {
                $('#Age').val('');
            }
        }

        // Calculate age on page load
        calculateAge();

        // Calculate age when birth date changes
        $('#BirthDate').on('change input', function () {
            calculateAge();
        });
    });
</script>




